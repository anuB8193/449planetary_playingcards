---
title: Planetary Playing Cards
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }}</title>

  <!-- Link to styles -->
  <link rel="stylesheet" href="/styles/screen.css">

  <!-- ScrollReveal Library -->
  <script src="https://unpkg.com/scrollreveal"></script>
</head>
<body>
  
  
  <main>
    {{ content }}
  </main>

  <footer>
    <p>Created by Anushka Basani</p>
  </footer>

  <!-- ScrollReveal Animation -->
  <script>
    document.addEventListener("DOMContentLoaded", function () {
        // Define custom animation properties
        var planetAnimation = {
            distance: '50px',
            origin: 'bottom',
            opacity: 0,
            duration: 800,
            easing: 'ease-in-out',
            interval: 200,
            reset: false // Set to false to animate only once
        };

        // Apply ScrollReveal animation to all planet cards
        ScrollReveal().reveal('.card', planetAnimation);
    });
  </script>

</body>
</html>
